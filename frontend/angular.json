{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "jn-website-frontend": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "sass"
                }
            },
            "root": "",
            "sourceRoot": "src/jsMain",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "dist/jn-website-frontend",
                        "index": {
                            "input": "src/jsMain/typescript/io/github/jervnorsk/projects/website/client/web/app/jn-website-app.index.html",
                            "output": "index.html"
                        },
                        "main": "src/jsMain/typescript/io/github/jervnorsk/projects/website/client/web/app/jn-website-app.main.ts",
                        "polyfills": [
                            "zone.js"
                        ],
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "sass",
                        "assets": [
                            {
                                "glob": "favicon.ico",
                                "input": "src/jsMain/resources/io/github/jervnorsk/projects/website/client/web/app/",
                                "output": "/"
                            },
                            {
                                "glob": "**/assets/**/*",
                                "input": "src/jsMain/resources/io/github/jervnorsk/projects/streaming/client/web/app/",
                                "output": "/projects/streaming"
                            }
                        ],
                        "styles": [
                            "src/jsMain/typescript/io/github/jervnorsk/projects/website/client/web/app/jn-website-app.main.sass"
                        ],
                        "scripts": [
                            "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "1mb",
                                    "maximumError": "2mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "1mb",
                                    "maximumError": "2mb"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "buildOptimizer": false,
                            "optimization": false,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "browserTarget": "jn-website-frontend:build:production"
                        },
                        "development": {
                            "browserTarget": "jn-website-frontend:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                }
            }
        }
    },
    "cli": {
        "analytics": "f695e744-de0a-4c0d-b40c-a1b93a526dcc"
    }
}
